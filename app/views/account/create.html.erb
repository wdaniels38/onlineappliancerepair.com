 <h1>create a new account</h1> 
 
 <p>Step 1 :  Create a username and password</p>
 
<div><%= error_messages_for 'create_user' %></div>

 	<% form_for @create_user, :url => { :action => 'create_account' } do |f| %>
	
	
	<table style="margin-top:25px; padding-bottom:15px; border-bottom:1px dotted #bbb">

		<tr style="height:40px;">
			<td style="width:150px;"><label for="username">Username:</label></td>
			<td><%= f.text_field :user_id %></td>
		</tr>
		
		<tr style="height:40px;">
			<td><label for="password">Password:</label></td>
			<td><%= f.password_field :password %></td>
		</tr>
		
		<tr style="height:40px;">
			<td><label for="confirm_password">Confirm Password:</label></td>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
		
		<tr style="height:40px;">
			<td><label for="email">Email:</label></td>
			<td><%= f.text_field :email %></td>
		</tr>
		
		<tr style="height:40px;">
			<td><label for="confirm_email">Confirm Email:</label></td>
			<td><%= f.text_field :email_confirmation %></td>
		</tr>
		</table>
		
		<table style="margin-top:25px">		
		
		<tr style="height:40px;">
			<td style="width:150px;"><label for="first_name">First Name:</label></td>
			<td><%= f.text_field :first_name %></td>
		</tr>
		
		<tr style="height:40px;">
			<td><label for="last_name">Last Name:</label></td>
			<td><%= f.text_field :last_name %></td>
		</tr>
		

		
		<%= f.hidden_field :is_active, :value => 0 %>
		
		<tr>
			<td colspan=2 style="text-align:right; height:40px" ><%= submit_tag 'Create Account' %></td>
		</tr>
	</table>
	 <% end %>
