<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
<title><%= @title %> | OnlineApplianceRepair.com - Fix it yourself at Home!</title>
<meta name="description" content="<%= @description %>" />
<meta name="keywords" content="<%= @keywords %>" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="robots" content="index,follow" />
<%= javascript_include_tag :all %>
<%= stylesheet_link_tag "screen" %>
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
	<div id="above_header_wrapper">	
		<% if session[:user] %>
		
			<div id="top_information">
				<span>
					<%= "You are signed in as #{session[:user]}" -%>
				</span>
				<span id="cart_information">
					<u>cart</u> &nbsp;|&nbsp; <u>my account</u>
					&nbsp;|&nbsp; <%= link_to "sign out", :controller => 'account', :action => 'log_out' %>
				</span>
					</div>
		<% else %>
			<div id="top_information">
				<span>
					<b>Welcome.</b>&nbsp;&nbsp;Please 
					<%= link_to "sign in", :controller => "account", :action => "login" %>
					</span>
				<span id="cart_information">
					<u>cart</u> &nbsp;|&nbsp; <u>my account</u>
				</span>
			</div>
		<% end %>
	</div>
	
	<div id="header_wrapper">

		<div id="header">
			<%= image_tag("header.png", {:alt => 'online appliance repair'}) %>
		</div>
	</div>
	<div id="navigation_wrapper">
		<div id="navigation">
			<span id="<%= @slug1 %>"><%= link_to "home", :controller => "home", :action => "index" %></span>
			<span id="<%= @slug2 %>"><%= link_to "about us", :controller => "about", :action => "index" %></span>
			<span id="<%= @slug3 %>">helpful info</span>
			<span id="<%= @slug8 %>">testimonials</span>
			<span id="<%= @slug8 %>">faqs</span>
			<span id="<%= @slug8 %>"><%= link_to "contact us", :controller => "contact", :action => "index" %></span>
		</div>		
	</div>
			
	<div id="container">
		<%= @content_for_layout %>
		<br style="clear:both" />
	</div>
	
	<div id="footer_wrapper">
		
	</div>
	
</body>
</html>